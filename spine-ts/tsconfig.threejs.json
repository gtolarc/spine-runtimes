{
	"compilerOptions": {
		"target": "esnext",
		"module": "none",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outFile": "build/spine-threejs.js",
		"sourceMap": true,
		"declaration": true,
	},
	"include": [
		"core/src/**/*",
		"threejs/src/**/*"
	],
	"exclude": [
		"canvas",
		"webgl",
		"player",
		"build"
	]
}